{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Agents": "Information",
      "Microsoft.SemanticKernel": "Information"
    }
  },
  "AllowedHosts": "*",
  "Connections": {
    "BotServiceConnection": {
      "Assembly": "Microsoft.Agents.Authentication.Msal",
      "Type": "MsalAuth",
      "Settings": {
        "AuthType": "ClientSecret",
        "AuthorityEndpoint": "https://login.microsoftonline.com/botframework.com",
        "ClientId": "",
        "ClientSecret": "",
        "Scopes": [ "https://api.botframework.com/.default" ],
        "TenantId": ""
      }
    }
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:5000", "https://localhost:5001" ]
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "CallbackPath": "/auth/callback",
    "RedirectUri": "http://localhost:5000/auth/callback",
    "Scopes": [
      "openid",
      "profile",
      "email",
      "User.Read",
      "Mail.Read",
      "Calendars.Read",
      "Files.Read.All",
      "Sites.Read.All",
      "People.Read.All",
      "Chat.Read",
      "OnlineMeetingTranscript.Read.All",
      "ChannelMessage.Read.All",
      "ExternalItem.Read.All"
    ]
  },
  "AzureOpenAI": {
    "ApiVersion": "2024-08-01-preview"
  },
  "MicrosoftGraph": {
    "BaseUrl": "https://graph.microsoft.com/beta",
    "CopilotChatEndpoint": "/copilot/conversations"
  },
  "Orchestration": {
    "MaxAgentCalls": 5,
    "TimeoutSeconds": 120,
    "EnableParallelExecution": true
  },
  "Agents": {
    "Type": "SingleAgent",
    "AgentId": "orchestrator-agent"
  },
  "AgentApplication": {
    "UserAuthorization": {
      "DefaultHandlerName": "graph",
      "AutoSignIn": true,
      "Handlers": {
        "graph": {
          "Settings": {
            "AzureBotOAuthConnectionName": "GraphConnection",
            "Title": "Sign in required",
            "Text": "Please sign in to access your M365 emails, calendar, and files."
          }
        }
      }
    }
  }
}
